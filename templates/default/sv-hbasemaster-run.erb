#!/bin/sh

source /etc/environment
source /opt/<%= node["hbase"]["folder-name"] %>/conf/hbase-env.sh

export JAVA_HOME=<%= node["java"]["java_home"] %>
export HBASE_HOME=/opt/<%= node["hbase"]["folder-name"] %>
export HBASE_CONF_DIR=/opt/<%= node["hbase"]["folder-name"] %>/conf
export HADOOP_HOME=/opt/<%= node["hadoop"]["folder-name"] %>
export HADOOP_CLASSPATH=:/opt/<%= node["hbase"]["folder-name"] %>/conf:/opt/<%= node["hbase"]["folder-name"] %>/lib/zookeeper-*.jar:/opt/<%= node["hbase"]["folder-name"] %>/<%= node["hbase"]["folder-name"] %>.jar

exec 2>&1
exec chpst -u hadoop /opt/<%= node["hbase"]["folder-name"] %>/bin/hbase --config /opt/<%= node["hbase"]["folder-name"] %>/conf  master start







